<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.ljb.imageviewer.BasicZoom
        android:id="@+id/image_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/zoomFrameLayout"
        app:layout_constraintEnd_toStartOf="@id/image_switcher"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageSwitcher
        android:id="@+id/image_switcher"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/image_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/image_view"
        app:layout_constraintTop_toTopOf="parent" />

    <com.ljb.imageviewer.tramsform.TransformLayout
        android:id="@+id/zoomFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:flingEnabled="false"
        app:rotateEnabled="false"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_view">

        <ImageView
            android:id="@+id/trans_img_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"/>
    </com.ljb.imageviewer.tramsform.TransformLayout>

    <com.ljb.imageviewer.tramsform.TransformImageView
        android:id="@+id/test_img"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:flingEnabled="false"
        app:rotateEnabled="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_view"/>

</androidx.constraintlayout.widget.ConstraintLayout>