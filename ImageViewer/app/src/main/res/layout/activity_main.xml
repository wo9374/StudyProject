<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.ljb.imageviewer.tramsformlayout.TransformLayout
        android:id="@+id/transform_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/transform_img_view"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/inner_img_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center" />
    </com.ljb.imageviewer.tramsformlayout.TransformLayout>

    <com.ljb.imageviewer.tramsformlayout.TransformImageView
        android:id="@+id/transform_img_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/pinch_dtap_img_view"
        app:layout_constraintTop_toBottomOf="@id/transform_layout" />

    <com.ljb.imageviewer.pinchzoom.TouchImageView
        android:id="@+id/pinch_dtap_img_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/transform_img_view" />

</androidx.constraintlayout.widget.ConstraintLayout>